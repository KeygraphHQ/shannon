{
  "name": "shannon",
  "version": "1.1.0",
  "type": "module",
  "main": "./dist/shannon.js",
  "description": "AI-powered security testing framework with Claude",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/shannon.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "generate-key": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64url'))\""
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "boxen": "^8.0.1",
    "chalk": "^5.0.0",
    "dotenv": "^16.4.5",
    "figlet": "^1.9.3",
    "gradient-string": "^3.0.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4",
    "zx": "^8.0.0"
  },
  "bin": {
    "shannon": "./dist/shannon.js"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
